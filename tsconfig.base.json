{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "cypress",
      "node",
      "allure-cypress"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sapiens-digital/e2e-common": [
        "e2e-shared/common/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
